{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "updateInternalDeps": true,
  "packageRules": [
    {
      "groupName": "minor dependencies",
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ]
    }
  ]
}
